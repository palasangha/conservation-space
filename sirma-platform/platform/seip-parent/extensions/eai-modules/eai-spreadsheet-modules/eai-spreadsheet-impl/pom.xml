<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>com.sirma.itt.seip</groupId>
		<artifactId>eai-spreadsheet-modules</artifactId>
		<version>2.28.0-SNAPSHOT</version>
	</parent>
	<artifactId>eai-spreadsheet-impl</artifactId>
	<properties>
		<sonar.exclusions>src/main/resources/META-INF/resources/eai/*.jar</sonar.exclusions>
		<version.eai.content.tool>1.0.2-SNAPSHOT</version.eai.content.tool>
	</properties>
	<dependencies>
		<dependency>
			<groupId>com.sirma.itt.seip</groupId>
			<artifactId>eai-spreadsheet-api</artifactId>
		</dependency>
		<dependency>
			<groupId>org.apache.poi</groupId>
			<artifactId>poi</artifactId>
			<version>4.1.1</version>
		</dependency>
		<dependency>
			<groupId>org.apache.poi</groupId>
			<artifactId>poi-ooxml</artifactId>
			<version>3.17</version>
		</dependency>
		<!--
		The original module located in GitHub
		https://github.com/monitorjbl/excel-streaming-reader
		Should be changed after merging the PR
		https://github.com/monitorjbl/excel-streaming-reader/pull/132
		and releasing
		<dependency>
			<groupId>com.monitorjbl</groupId>
			<artifactId>xlsx-streamer</artifactId>
			<version>1.2.2-SNAPSHOT</version>
		</dependency>
		-->
		<dependency>
			<groupId>com.sirma.sep</groupId>
			<artifactId>xlsx-streamer</artifactId>
			<version>1.2.2-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>org.apache.lucene</groupId>
			<artifactId>lucene-queryparser</artifactId>
			<!-- based on sesame, change when migrate to microservice -->
			<version>5.1.0</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>com.sirma.itt.seip</groupId>
			<artifactId>test-module</artifactId>
			<classifier>tests</classifier>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>commons-collections</groupId>
			<artifactId>commons-collections</artifactId>
			<version>3.2.1</version>
		</dependency>
		<dependency>
			<groupId>org.glassfish</groupId>
			<artifactId>javax.json</artifactId>
			<scope>test</scope>
		</dependency>
	</dependencies>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-dependency-plugin</artifactId>
				<version>3.0.1</version>
				<executions>
					<execution>
						<id>copy-dependencies</id>
						<phase>generate-resources</phase>
						<goals>
							<goal>copy</goal>
						</goals>
						<configuration>
							<silent>true</silent>
							<overWriteIfNewer>true</overWriteIfNewer>
							<overWriteSnapshots>true</overWriteSnapshots>
							<overWriteReleases>true</overWriteReleases>
							<artifactItems>
								<artifactItem>
									<groupId>com.sirma.itt.sep</groupId>
									<artifactId>eai-content-tool</artifactId>
									<version>${version.eai.content.tool}</version>
									<type>jar</type>
									<overWrite>true</overWrite>
									<destFileName>eai-content-tool-jfx.jar</destFileName>
									<outputDirectory>src/main/resources/META-INF/resources/eai/</outputDirectory>
								</artifactItem>
							</artifactItems>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>
